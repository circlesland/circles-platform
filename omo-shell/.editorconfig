# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf

[*.ts]
charset = utf-8
indent_style = space
indent_size = 2

[*.js]
charset = utf-8
indent_style = space
indent_size = 2

[*.svelte]
charset = utf-8
indent_style = space
indent_size = 2